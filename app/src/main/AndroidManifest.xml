        <activity android:name=".Activities.SearchActivity"/>
        <activity android:name=".Activities.ProductViewActivity"/>
        <activity android:name=".Activities.Settings"/>
        <activity android:name=".Activities.LanguageActivity"/>
        <activity android:name=".Activities.ContainActivity"/>
        <activity android:name=".Activities.ContactUsActivity"/>
        <activity android:name=".Activities.ConfirmOrderActivity"/>
        <activity android:name=".Activities.EditAddressActivity"/>
        <activity android:name=".Activities.AddNewAddressActivigty"/>
        <activity android:name=".Activities.ChangeAddressActivity"/>
        <activity android:name=".Profiles.VideoPostFragment"/>
        <activity android:name=".Activities.ProcessActivity"/>
        <activity android:name=".Activities.MyOrderActivity"/>
        <activity android:name=".Activities.CatActivity"/>
        <activity android:name=".Activities.CatVideoListingActivity"/>
    </application>

</manifest>