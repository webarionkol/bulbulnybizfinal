<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10sp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Product Name"
                android:layout_marginLeft="10sp"
                android:textColor="#444"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="₹100"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"

            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:orientation="vertical">






                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20sp"
                        android:id="@+id/demo"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img03"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/demo"
                        android:layout_toLeftOf="@+id/imageView222"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="Product name"
                            android:layout_marginLeft="10sp"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="Product desc"
                            android:layout_marginLeft="10sp"
                            android:textColor="@android:color/black"
                            android:textSize="10sp"
                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="$100"
                            android:textStyle="bold"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="@android:color/black"
                            android:textSize="10sp"
                            />



                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView222"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:padding="10sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/ic_add_to_cart" />


                </RelativeLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin10"
            android:layout_gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Product Benefits"
                android:layout_marginLeft="10sp"
                android:textColor="#444"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="₹100"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40sp"
                    android:id="@+id/img_pro"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_warrent"
                    android:layout_height="40sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_pro"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"
                    android:text="Warranty"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="15dp"

                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40sp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img_pro2"
                    android:src="@drawable/ic_easy_return"
                    android:layout_height="40sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_pro2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"
                    android:text="Returnable"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_pro1"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_exchange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_pro1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"
                    android:text="Exchange"/>

            </RelativeLayout>




        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Select Size"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="#444"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_view_size"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Select Color"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="#444"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/recycle_view_color"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Description"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="#444"
            android:textSize="16dp"
            android:textStyle="bold" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Select Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textColor="@color/text_gray"
            android:textSize="12dp"
             />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="20sp"

            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="140sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"


                android:background="@drawable/round_add"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/view1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"

                    android:src="@drawable/ic_add_to_bag"
                    android:tint="@color/white" />


                <TextView
                    android:id="@+id/txt_details1"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="2sp"
                    android:layout_toRightOf="@+id/view1"
                    android:gravity="center_vertical"
                    android:text="Add To Cart"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="140sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"


                android:layout_marginLeft="20sp"
                android:background="@drawable/round_add"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/view12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"

                    android:src="@drawable/ic_add_to_bag"
                    android:tint="@color/white" />


                <TextView
                    android:id="@+id/txt_details11"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="2sp"
                    android:layout_toRightOf="@+id/view12"
                    android:gravity="center_vertical"
                    android:text="Buy "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>

</LinearLayout>