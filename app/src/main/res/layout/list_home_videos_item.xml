<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet"
    android:layout_height="match_parent">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:resize_mode="fixed_height"

        android:clickable="true"
        android:longClickable="true"
        android:visibility="visible"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"

        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/margin50"
            android:layout_height="@dimen/margin50"
            android:src="@drawable/ic_arrow_back_24dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_back"
            android:padding="8sp"
            android:tint="@color/text_gray"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_back"
        android:orientation="horizontal"
        android:id="@+id/layout_name">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="@dimen/margin50">

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="50sp"
               android:layout_height="50sp"
               android:padding="8sp"
               android:layout_marginLeft="5sp"

               android:src="@drawable/profile_img"/>

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="20sp"
               android:layout_height="20sp"
            android:paddingLeft="5sp"
                android:layout_alignParentBottom="true"
                android:id="@+id/img_profile"
                android:layout_centerHorizontal="true"
               android:src="@drawable/ic_checkmark_client"/>


       </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/txt_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15sp"
            android:text="John Doc"/>
    </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="100sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-40dp"
        android:background="@drawable/selector_btn_dark"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/cardview_data"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25sp"

        android:orientation="horizontal">


        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/ic_shopping_bagoutline"
            android:tint="@color/white"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:text="1"

            android:textColor="@color/white"
            android:paddingTop="3dp"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_shopping_bagoutline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"
            android:text="Bag"/>

    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardview_data"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:src="@drawable/ic_whatsapp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/txt_whatsapp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:textStyle="bold"
            android:text="1.2k"/>


        <ImageView
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:layout_marginTop="30sp"
            android:src="@drawable/ic_like"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/txt_like"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:textStyle="bold"
            android:text="23"/>


        <ImageView
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:layout_marginTop="30sp"
            android:src="@drawable/ic_sharing"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/txt_share"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:textStyle="bold"
            android:text="20"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/margin300"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentRight="true"
        android:id="@+id/cardview_data"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="20sp"

        android:layout_alignParentBottom="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="vertical">






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:id="@+id/demo"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img03"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/demo"
                    android:layout_toLeftOf="@+id/imageView222"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Product name"
                        android:layout_marginLeft="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Product desc"
                        android:layout_marginLeft="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="â‚¹200"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        />



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="30sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginRight="10sp"

                    android:background="@drawable/round_add"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/view1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"

                        android:src="@drawable/ic_add_to_bag"
                        android:tint="@color/white" />


                    <TextView
                        android:id="@+id/txt_details1"
                        android:layout_width="wrap_content"

                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="2sp"
                        android:layout_toRightOf="@+id/view1"
                        android:gravity="center_vertical"
                        android:text="Buy"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>

            </RelativeLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/viewProgressbar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dr_progressbar_bg"
        android:visibility="gone">

        <com.apps.nybizz.Utils.CircularProgressBar
            android:id="@+id/downloadProgressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>