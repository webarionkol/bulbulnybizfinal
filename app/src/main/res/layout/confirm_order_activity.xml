<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layut_top"
        android:background="@color/white"
        android:layout_height="50sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="Cart"/>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom_sheet"
        android:layout_below="@+id/layut_top"
        android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:id="@+id/layout_data"
                    android:background="@drawable/gradiant"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"

                        android:textSize="18sp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_shopping_bag"
                        android:text="What is the issue?"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:tint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20sp"
                        android:text="Order Confirm"/>



                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/layout_data"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycle_view"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/recycle_view"
                    android:layout_marginTop="10sp"
                    android:id="@+id/cardview_topselliung"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="18sp"
                                android:src="@drawable/location"
                                android:text="Address"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="18sp"

                                android:text="Address"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="16sp"

                                android:text="Full Name"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="15sp"

                                android:text="Home Number / Office Number"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="15sp"

                                android:text="Street Name"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="15sp"

                                android:text="Landmark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="15sp"

                                android:text="City - Pincode"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10sp"

                                android:layout_marginTop="5sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="15sp"

                                android:text="State - Country"/>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@color/blue"
                                android:layout_height="40sp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="10sp"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:id="@+id/txt_edit_address"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:text="Edit Address"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:id="@+id/txt_changed_address"
                                    android:layout_marginLeft="10sp"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:text="Change Address"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/cardview_topselliung"
                    android:layout_marginTop="10sp"
                    android:id="@+id/add_coupon_code"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="18sp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_coupon"
                                android:text="Address"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="10sp"
                                android:textSize="18sp"

                                android:text="Apply Coupon"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10sp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"

                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:textSize="16sp"
                                android:hint="Apply Coupon Code"
                                />


                            <Button
                                android:id="@+id/button1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="20sp"
                                android:layout_marginLeft="20sp"
                                android:layout_height="@dimen/margin30"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@drawable/selector_btn_dark"
                                android:layout_toRightOf="@+id/txt_prise"
                                android:text="Apply"
                                android:textColor="@color/white"
                                android:textSize="11sp" />


                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>



            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/bottom_sheet"
        android:layout_alignParentBottom="true"

        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/layout_price"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₹100"
                    android:layout_marginLeft="10sp"
                    android:textSize="25sp"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_prise"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Bill Details"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/msg_fail"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/selector_btn_dark"
                android:layout_toRightOf="@+id/txt_prise"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textSize="11sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>